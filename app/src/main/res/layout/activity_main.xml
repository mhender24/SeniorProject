<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.platinum_express.seniorprojectandroid.MainActivity">


    <TextView
        android:text="Customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21dp"
        android:height="20dp"
        android:id="@+id/customer_lbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="20dp"
        android:id="@+id/part_num_lbl"
        android:layout_below="@+id/part_name_lbl"
        android:layout_alignLeft="@+id/part_name_lbl"
        android:layout_alignStart="@+id/part_name_lbl"
        android:text="Customer Part Number:" />

    <TextView
        android:text="Part Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="20dp"
        android:id="@+id/part_name_lbl"
        android:layout_below="@+id/customer_lbl"
        android:layout_alignLeft="@+id/customer_lbl"
        android:layout_alignStart="@+id/customer_lbl" />

    <TextView
        android:text="Build / Lot#"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="20dp"
        android:id="@+id/build_lbl"
        android:layout_below="@+id/part_num_lbl"
        android:layout_alignLeft="@+id/part_num_lbl"
        android:layout_alignStart="@+id/part_num_lbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/customer_lbl"
        android:layout_toRightOf="@+id/part_num_lbl"
        android:layout_toEndOf="@+id/part_num_lbl"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:id="@+id/customer_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_text"
        android:layout_alignLeft="@+id/customer_text"
        android:layout_alignStart="@+id/customer_text"
        android:id="@+id/part_name_text"
        android:layout_above="@+id/build_lbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/part_num_lbl"
        android:layout_toRightOf="@+id/customer_text"
        android:layout_toEndOf="@+id/customer_text"
        android:id="@+id/part_number_text"
        android:layout_alignBottom="@+id/part_num_lbl" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/build_spinner"
        android:layout_below="@+id/part_name_text"
        android:layout_alignBottom="@+id/build_lbl"
        android:layout_toRightOf="@+id/part_name_text"
        android:layout_toEndOf="@+id/part_name_text" />

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/build_lbl"
        android:id="@+id/process_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:background="@color/tableHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:text="Process"
                android:layout_column="0"
                android:layout_weight=".5"
                android:layout_width="10dp">
            </TextView>

            <TextView android:text="Operator"
                android:layout_column="1"
                android:layout_weight="1.4"
                android:layout_width="0dp">
            </TextView>

            <TextView android:text="Date"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="20dp">
            </TextView>
            <TextView android:text="How Many Boards"
                android:layout_width="10dp"
                android:layout_column="3"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </TextView>
            <TextView android:text="Hours Worked"
                android:layout_width="10dp"
                android:layout_column="4"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </TextView>
            <TextView android:text="Task"
                android:layout_width="10dp"
                android:layout_column="5"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </TextView>
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner android:id="@+id/process_spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="4"
                android:id="@+id/editText3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="date"
                android:ems="1"
                android:text="Date"
                android:id="@+id/editText5" />
        </TableRow>
    </TableLayout>

    <Button
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/test_btn"
        android:onClick="addRow" />

</RelativeLayout>
